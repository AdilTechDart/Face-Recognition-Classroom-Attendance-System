<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/picture1"
    tools:context="com.example.myapplication.MainActivity">

    <TextView
        android:id="@+id/successname2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="35sp"
        />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="创建学生集合"
            android:drawableLeft="@drawable/users"
            android:paddingLeft="20dip"
            android:gravity="center_vertical"
            android:drawablePadding="10dip"   />
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/button_clean"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空学生集合"
            android:drawableLeft="@drawable/trashfull"
            android:paddingLeft="20dip"
            android:gravity="center_vertical"
            android:drawablePadding="10dip"/>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal"


        >

        <EditText android:id="@+id/et_ds1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入学生名称"
            android:singleLine="true"/>

        <Button android:id="@+id/button_ds"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="删除学生记录"
            android:singleLine="true"
            android:drawableLeft="@drawable/broom"
            android:paddingLeft="20dip"
            android:gravity="center_vertical"
            android:drawablePadding="10dip"
            />

    </LinearLayout>






    <LinearLayout android:layout_width="fill_parent"

        android:layout_height="wrap_content"

        android:orientation="horizontal"


        >

        <EditText android:id="@+id/et_in1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入课程名称"
            android:singleLine="true"/>

        <EditText android:id="@+id/et_time1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:hint="请输入课程序号"
            android:singleLine="true"/>

    </LinearLayout>




    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button android:id="@+id/button_addcourse"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="创建课程"
            android:drawableLeft="@drawable/add2"
            android:paddingLeft="20dip"
            android:gravity="center_vertical"
            android:drawablePadding="10dip"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button android:id="@+id/button_searchcourse"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="查询历史数据"
            android:drawableLeft="@drawable/magnifier"
            android:paddingLeft="20dip"
            android:gravity="center_vertical"
            android:drawablePadding="10dip"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/Text_t_print2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="25sp"/>


</LinearLayout>